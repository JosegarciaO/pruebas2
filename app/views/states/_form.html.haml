.row
  .span12
    = form_for State.new, :url => "", :html => { :id => "#{form_type}_state" } do |f|
      %fieldset
        .control-group
          = f.label :name, :class => "control-label"
          .controls
            = f.text_field :name, :class => "input-xlarge"

        .control-group
          = f.label :country_id, :class => "control-label"
          .controls
            = f.collection_select :country_id, @countries, :id, :name, { :include_blank => "- Seleccione -", :class => "input-xlarge" }

      .row
        #eip-container.span12

      .row
        #eip-buttons.span12.well
          = f.submit t("helpers.submit.#{form_type}", :model => f.object.class.model_name.human), :class => "btn btn-primary right"
