.row
  .span12
    = form_for InsurancePossession.new, :url => "", :html => { :id => "#{form_type}_insurance_possession" } do |f|
      %fieldset
        .control-group
          = f.label :insurance, :class => "control-label"
          .controls
            = f.text_field :insurance, :class => "input-xlarge"

        .control-group
          = f.label :possession, :class => "control-label"
          .controls
            = f.text_field :possession, :class => "input-xlarge"

        .control-group
          = f.label :has_max_amount, :class => "control-label"
          .controls
            = f.text_field :has_max_amount, :class => "input-xlarge"

        .control-group
          = f.label :max_amount, :class => "control-label"
          .controls
            = f.text_field :max_amount, :class => "input-xlarge"

      .row
        #eip-container.span12

      .row
        #eip-buttons.span12.well
          = f.submit t("helpers.submit.#{form_type}", :model => f.object.class.model_name.human), :class => "btn btn-primary right"
