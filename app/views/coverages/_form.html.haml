.row
  .span12
    = form_for Coverage.new, :url => "", :html => { :id => "#{form_type}_coverage" } do |f|
      %fieldset
        .row
          .span12
            .control-group
              = f.label :name, :class => "control-label"
              .controls
                = f.text_area :name, :value => "${name}", :class => "span12", :rows => 6
        .row
          .span2
            = f.label :deductible_min, :class => "control-label"
            .controls
              = f.text_field :deductible_min, :class => "input-small"
          -#.span2
          -#  = f.label :deductible_editable, :class => "control-label"
          -#  .controls
          -#    = f.check_box :deductible_editable
          .span2
            = f.label :active, :class => "control-label"
            .controls
              = f.check_box :active

      .row
        #eip-container.span12

      .row
        #eip-buttons.span12.well
          = f.submit t("helpers.submit.#{form_type}", :model => f.object.class.model_name.human), :class => "btn btn-primary right"
