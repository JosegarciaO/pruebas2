.row
  .span12
    = form_for CertificateRequestCoverage.new, :url => "", :html => { :id => "#{form_type}_certificate_request_coverage" } do |f|
      %fieldset
        .control-group
          = f.label :certificate_request, :class => "control-label"
          .controls
            = f.text_field :certificate_request, :class => "input-xlarge"

        .control-group
          = f.label :coverage, :class => "control-label"
          .controls
            = f.text_field :coverage, :class => "input-xlarge"

      .row
        #eip-container.span12

      .row
        #eip-buttons.span12.well
          = f.submit t("helpers.submit.#{form_type}", :model => f.object.class.model_name.human), :class => "btn btn-primary right"
